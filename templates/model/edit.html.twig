{% extends 'base.html.twig' %}

{% block body %}
    <form method="POST" action="/model/{{ model.id }}/edit">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="{{ model.title }}">
        <label for="path">Path</label>
        <input type="text" id="path" name="path" {% if model.routeEntity.routeTemplate is defined %}value="{{ model.routeEntity.routeTemplate }}"{% endif %}>
        <label for="event">Event</label>
        <select name="event" id="event" >
            {% for event in events %}
                <option value="{{ event.id }}" {% if model.event.id == event.id %}selected{% endif %}>{{ event.title }}</option>
            {% endfor %}
        </select>
        <input type="submit" value="Submit">
    </form>
{% endblock %}
